<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.familybudget.EditCategoryController">
    <Label text="Название категории"/>
    <TextField fx:id="nameField"/>

    <Label text="Описание"/>
    <TextField fx:id="descriptionField"/>

    <Label text="Месячный лимит"/>
    <TextField fx:id="limitField"/>

    <Label text="Заметки"/>
    <TextField fx:id="notesField"/>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Сохранить" onAction="#onSave"/>
        <Button text="Отмена" onAction="#onCancel"/>
    </HBox>
</VBox>